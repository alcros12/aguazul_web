

<div class="container">
<h1 align="center"><font color="white">Listado de categorias de articulos</font></h1>
       
  <table class="table">
    <thead>
   	 <tr>
      <th><font color="white">Nombre</font></th>
      <th><font color="white">Descripcion</font></th>
      <th colspan="3" width="20%"><font color="white"><center>Acciones</center></th>
    </tr>
  </thead>
    
 
       <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><font color="white"><%= category.name %></font></td>
        <td><font color="white"><%= category.Category_description %></font></td>
        <td align="right"><%= link_to 'Ver', category, :class => "btn btn-default btn-xs" %></td>
        <td align="center"><%= link_to 'Editar', edit_category_path(category), :class => "btn btn-default btn-xs" %></td>
        <td align="left" ><%= link_to 'Borrar', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
 		 </tbody>

  </table>
</div>


<center>
<p><font color="white" size="4"><%= link_to 'Nueva categoria', new_category_path %></font></p>
</center>

