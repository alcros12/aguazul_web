<div class="product-list-inline-large">
  <div class="col-xs-12 col-sm-6 col-md-3">
    <div class="thumbnail light">
          <a>
              <span class="label label-default price price-over"><%= image_tag("gema.png")%>&nbsp;<%=product.price%></span>
                <%= image_tag product.picture.url(:medium)  %>
          </a>
          <div class="caption">
            <h3><%= product.name %></h3>
            <p><%= product.description %></p>
          </div>
      <%= form_for order_article, remote: true do |f| %>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Agregar al Carrito", class: "btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>