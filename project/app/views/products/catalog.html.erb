<div class="container">
  <div>
    <h1 align="center"><font color="white">Cat&aacutelogo</font></h1>
</div>
    
<div class="container">
  <div class="row">
  	<div class="col-md-12">
    	  <%= form_tag(catalog_path, :method => "get", id: "search-form") do %>
      	  <div class="input-group" id="adv-search">
             <%= text_field_tag :search, params[:search], placeholder: "Buscar producto..",class: "form-control" %>
               <div class="input-group-btn">
                   <%= submit_tag "Buscar",class:"btn btn-primary" %>
              </div>
           </div>
        <% end %>
    </div>
  </div>
</div>
  
<br><br>
  
<div class="row">
    <% if @products.count == 0 %>
      <h1 align="center"><font color="white">No existen productos disponibles</font></h1>
      <br>
    <% else %>
      <% @products.each do |product| %>
          <%= render "product_row", product: product, order_article: @order_article %>  
      <% end %>
    <% end %>
  </div>
</div>