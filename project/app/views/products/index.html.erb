<%- model_class = Product -%>

<div class="container">
<h1 align="center"><font color="white">Listado de productos</font></h1>
       
  <table class="table">
  <thead>
    <tr>
      <th><font color="white"><%= model_class.human_attribute_name(:name) %></font></th>
      <th><font color="white"><%= model_class.human_attribute_name(:description) %></font></th>
      <th><font color="white"><%= model_class.human_attribute_name(:category) %></font></th>
      <th><font color="white"><%= model_class.human_attribute_name(:picture) %></font></th>
      <th><font color="white"><%= model_class.human_attribute_name(:created_at) %></font></th>
      <th><font color="white"><%=t '.actions', :default => t("helpers.actions") %></font></th>
    </tr>
  </thead>
  
  
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><font color="white"><%= product.name %></font></td>
        <td><font color="white"><%= product.description %></font></td>
        <td><font color="white"><%= product.category.name %></font></td>
        <td><font color="white"><%= image_tag product.picture.url(:thumb)  %></font></td>
        <td><font color="white"><%=l product.created_at %></font></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
<br>&nbsp;