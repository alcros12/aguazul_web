<p id="notice"><%= notice %></p>


 
<div class="container">
<h1 align="center"><font color="white">Listado de Marcas</font></h1>
       
  <table class="table">
    <thead>
   	 <tr>
      <th><font color="white">Nombre</font></th>
      <th colspan="3" width="20%"><font color="white"><center>Acciones</center></th>
    </tr>
  </thead>
    
 
       <tbody>
    <% @trade_marks.each do |trade_mark| %>
      <tr>
        <td><font color="white"><%= trade_mark.name %></font></td>
        <td align="right"><%= link_to 'Ver', trade_mark, :class => "btn btn-default btn-xs" %></td>
        <td align="center"><%= link_to 'Editar', edit_trade_mark_path(trade_mark), :class => "btn btn-default btn-xs" %></td>
        <td align="left" ><%= link_to 'Borrar', trade_mark, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
 		 </tbody>

  </table>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_trade_mark_path,
            :class => 'btn btn-primary' %>
