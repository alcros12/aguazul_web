<div class="page-header">
  <h1 align="center"><font color="white">Cat&aacutelogo</font></h1>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12">
		  
		  	<form id='frmSearchProduct' action='/search_product' role="form" method='post'>
            <div class="input-group" id="adv-search">
                <input type="text" class="form-control" name="searchBar"  placeholder="Buscar Producto.." />
                <div class="input-group-btn">
                    <div class="btn-group" role="group">
                        <div class="dropdown dropdown-lg">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>
                            <div class="dropdown-menu dropdown-menu-right" role="menu">
                                
                                <form id='frmFilterProduct' class="form-horizontal" role="form" action='/catalogo'>
                                  <div class="form-group">
                                    <label for="filter">Filtro por</label>
                                    <select class="form-control">
                                        <option value="0" selected>Todas las categor&iacuteas</option>
                                         <% @categories.each do |category| %>
                                        <option><%= category.name.upcase %></option>
                                        <% end %>
                                    </select>
                                  </div>
                                  <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;Filtrar</button>
                                </form>
                                
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">
                          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;Buscar
                        </button>
                        
                    </div>
                </div>
            </div>
        </form>
        
        </div>
    </div>
</div>

<br><br>

<div class="row">
  <% if @products.count == 0 %>
    <h1 align="center"><font color="white">No se encontraron productos</font></h1>
    <br>
  <% else %>
  <% @products.each do |product| %>
  
  <% if @productfiler == nil%>
      <div class="product-list-inline-large">
      <div class="col-xs-6 col-md-3">
        <div class="thumbnail light">
          <a>
            <span class="label label-default price price-over"><%= image_tag("gema.png")%>&nbsp;<%=product.price%></span>
            <%= image_tag product.picture.url(:medium)  %>
          </a>
          <div class="caption">
            <h3><%= product.name %></h3>
            <p><strong>Categoría: <%= product.category.name.upcase  %></strong></p>
            <p><%= product.description %></p>
          </div>
        </div>
      </div>
    </div>
    
  <% else %>
    <div class="product-list-inline-large">
      <div class="col-xs-6 col-md-3">
        <div class="thumbnail light">
          <a>
            <span class="label label-default price price-over"><%= image_tag("gema.png")%>&nbsp;<%=@productfiler.price%></span>
            <%= image_tag @productfiler.picture.url(:medium)  %>
          </a>
          <div class="caption">
            <h3><%= @productfiler.name %></h3>
            <p><strong>Categoría: <%= @productfiler.category.name.upcase  %></strong></p>
            <p><%= @productfiler.description %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <% end %>
  <% end %>
</div>